<li id="<%= feed_item.id %>">
  <div class="feed_gravatar_size">
    <%= link_to gravatar_for_feed(feed_item.user), feed_item.user %>
  </div>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content"><%= wrap(feed_item.content) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <%= render 'shared/micro_del', object: feed_item %>
</li>
